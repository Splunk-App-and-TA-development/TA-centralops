<setup>
        <block title="CentralOps Configuration">
        	<text>Documentation: https://github.com/doksu/TA-centralops</text>
        </block>

	<block title="General" endpoint="configs/conf-centralops" entity="general">
                <input field="limit">
                        <label>Whois Default Query Limit Per Search:</label>
                        <type>text</type>
                </input>
	</block>

	<block title="Whois Summary Indexing" endpoint="configs/conf-macros" entity="centralopswhois_summaryindex">
                <input field="definition">
                        <label>Whois Summary Index:</label>
                        <type>text</type>
                </input>
	</block>

	<block title="Proxy Settings" endpoint="configs/conf-centralops" entity="proxies">
        	<text>Leave blank if not required.</text>
		<input field="http">
			<label>HTTP:</label>
			<type>text</type>
		</input>

		<input field="https">
			<label>HTTPS:</label>
			<type>text</type>
		</input>
	</block>
</setup>
